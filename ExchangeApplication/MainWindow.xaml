<Window x:Class="ExchangeApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExchangeApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="441" Width="734">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="151*"/>
                <ColumnDefinition Width="91*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="42"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ListView x:Name="ListView_Users" Grid.Column="1" Grid.Row="1" Margin="10,41,10,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Имя">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Stretch" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Состояние счета">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Wallet}" HorizontalAlignment="Stretch" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Label Content="Участники биржи" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top"/>
            <Label Content="Кол-во денег в обращении" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,6" Width="165"/>
            <TextBlock x:Name="TextBlock_BankMoney" Grid.Column="1" Margin="199,14,10,10" TextWrapping="Wrap" Text="0"/>
            <Button Content="Начать торги" Margin="0,12,10,10" HorizontalAlignment="Right" Width="96" Click="Button_Click" Name="Button_StartStopExchange"/>
        </Grid>

    </Grid>
</Window>
